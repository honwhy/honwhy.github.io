---
import PageLayout from "@/layouts/Base.astro";

const meta = {
	description: "FinAnalytica build on top of Dify.ai",
	title: "Dify | FinAnalytica",
};
---

<style>
	:global(body) {
		font-family: "Inter", sans-serif;
		background-color: #f8f9fa;
		max-width: 100vw !important;
		padding: 0 !important;
	}
	:global(header#main-header) {
		display: none;
	}
	:global(footer) {
		display: none !important;
	}
	:global(main) {
		height: 100vh;
	}
</style>

<PageLayout meta={meta}>
	<iframe
		src="https://udify.app/chatbot/zECfnjPVfqD4y4ii"
		style="width: 100%; height: 100%; min-height: 700px"
		frameborder="0"
		allow="microphone"
	>
	</iframe>
</PageLayout>
